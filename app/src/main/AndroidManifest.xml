<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techneapps.triviaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDark">
        <activity android:name=".view.splash.SplashActivity"
            android:theme="@style/AppThemeDark.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.quiz.QuizHistoryActivity" />
        <activity android:name=".view.quiz.QuizResultActivity" />
        <activity android:name=".view.quiz.SecondQuizQuestionActivity" />
        <activity android:name=".view.quiz.FirstQuizQuestionActivity" />
        <activity
            android:name=".view.user.EnterUserNameActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>