<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/md_white_1000">

    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="@color/clearBlue" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/clearBlue" />
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="@color/whiteTwo" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/whiteTwo" />
                </shape>
            </item>
        </selector>
    </item>

    <item
        android:id="@android:id/mask"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/clearBlueTransparent" />
            <stroke
                android:width="1dp"
                android:color="@color/clearBlueTransparent" />
        </shape>
    </item>

</ripple>