<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.techneapps.triviaapp.view.user.EnterUserNameViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="26sp"
        tools:context=".view.user.EnterUserNameActivity">
        <LinearLayout
            android:id="@+id/questionNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="Personal Details"
                android:textColor="@color/md_grey_700"
                android:textSize="28sp" />

        </LinearLayout>

        <ImageView
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@+id/questionNo"
            android:id="@+id/dottedLine"
            android:src="@drawable/dotted_line"/>

        <TextView
            android:layout_below="@+id/dottedLine"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/sourcesanspro_bold"
            android:text="What is your name?"
            android:textColor="@color/md_white_1000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:background="@drawable/radio_button_bg"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:drawablePadding="20sp"
            android:fontFamily="@font/sourcesanspro_regular"
            android:hint="Your name"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:lines="1"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingStart="16sp"
            android:paddingEnd="16sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/md_grey_300"
            android:textColorHint="@color/md_grey_500"
            android:textSize="18sp" />


        <Button
            android:textColor="@color/md_white_1000"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_rect_background_state"
            android:enabled="false"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:onClick="goToNextPage"
            android:paddingStart="30sp"
            android:paddingEnd="30sp"
            android:text="Next"
            android:textAllCaps="false" />

    </RelativeLayout>
</layout>